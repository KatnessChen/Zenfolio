# Price Service Environment Variables

# Server Configuration
PORT=8081
GIN_MODE=release

# API Key for authentication
API_KEY=your-api-key-here

# Stock Price Provider Configuration
# Currently only 'alpha_vantage' is supported
STOCK_API_PROVIDER=alpha_vantage
# Get your free API key from: https://www.alphavantage.co/support/#api-key
STOCK_API_KEY=your-alpha-vantage-api-key-here
STOCK_API_BASE_URL=https://www.alphavantage.co/query

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
DEFAULT_TTL_MINUTES=60
MAX_SYMBOLS_PER_REQUEST=50

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1
